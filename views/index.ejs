  <head>
    <title>Reportapp</title>
    <meta name="App de robos" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Reportapp permite ver en tiempo real, observar en el mapa, crear y filtrar, hechos de inseguridad registrados en tu ciudad.">
    <meta name="keywords" content="Reportes, Inseguridad, Mapa, Tiempo Real, Crear, Filtrar">
    <meta name="author" content="Luis Ruiz - Sebastián Martinez">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="icon" type="icon" href="./images/icon.jpg">


    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
  </head>
  <body>
    <!-- Navbar -->
    <%- include("./navbar.ejs")%>

    <!-- Container with the info -->
    <div class="container">
      <!-- Map -->
      <div id="mapaRow" class="mapa row">
        <div class="col-12">
          <h3>Mapa en tiempo real:</h3>
          <p>Con reportapp podrás observar en tiempo real los reportes que otras personas estén haciendo sobre hechos de inseguridad en la ciudad.</p>
          <div id="map"></div>
        </div>
      </div>
      <!-- Reports and create -->
      <div id="reportesRow"class="reportes row">
        <div class="col-12 col-md-8">
          <!-- Reports -->
          <h1>Reportes</h1>
          <div class="row">
            <div class="col-6">
              <!-- Search form date -->
              <form id="formSearch">
                <div class="form-group">
                  <input type="text" class="form-control" placeholder="Ingrese una fecha">
                </div>
                <div class="form-group">
                  <button class="btn btn-secondary" type="submit">Filtrar</button>
                </div>
              </form>
            </div>
            <div class="col-6">
              <!-- Search form keyword -->
              <form id="formSearch2">
                <div class="form-group">
                  <input type="text" class="form-control" placeholder="Ingrese una palabra clave">
                </div>
                <div class="form-group">
                  <button class="btn btn-secondary" type="submit">Filtrar</button>
                </div>
              </form>
            </div>
          </div>
          <div id="reportes">
            <% reportes.forEach( (reporte) => { %>
              <% if (reporte.violencia == "on") {%>

                <div class="alert alert-danger" role="alert"> Fecha: <%= reporte.date %>  <%= reporte.hora %>. Titulo: <%= reporte.titulo %></div>
              <% } else { %>
                <div class="alert alert-info" role="alert">Fecha: <%= reporte.date %> : <%= reporte.hora %>.  Titulo: <%= reporte.titulo %></div>
            <% }}) %>
          </div>
        </div>
        <!-- Create -->
        <div id="crear" class="crear col-12 col-md-4">
          <h1>Crear Reporte</h1>
          <%- include("./create_form.ejs") %>
        </div>
      </div>
    </div>
    <!-- footer -->
    <%- include("./footer.ejs") %>
    <script type="text/javascript" src="/javascripts/map.js"></script>
    <script type="text/javascript" src="javascripts/markerclusterer.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=<%= api_key %>&callback=initMap"
    async defer></script>
    <script type="text/javascript" src = "/javascripts/listReportes.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>
